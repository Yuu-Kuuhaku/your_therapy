<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCD4"
    android:backgroundTint="#599341"
    android:overScrollMode="ifContentScrolls"
    android:scrollbars="vertical"
    android:verticalScrollbarPosition="right"
    tools:context=".TelaInicio">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.2"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/asdaf" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:text="Como você está se sentindo hoje?"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/idTxtBemVindo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Bem vindo"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/idSpinnerSentindo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/idBtnImgSentimento"
        app:layout_constraintEnd_toEndOf="@+id/idBtnImgSentimento"
        app:layout_constraintStart_toStartOf="@+id/idBtnImgSentimento"
        app:layout_constraintTop_toTopOf="@+id/idBtnImgSentimento" />

    <ImageButton
        android:id="@+id/idBtnImgSentimento"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#4000000F"
        android:elevation="1dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/idEditTextDesabafe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:maxLines="8"
        android:minHeight="48dp"
        android:overScrollMode="ifContentScrolls"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/idTxtSentimento" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/idBottomNavHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FAFAFA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu">

    </android.support.design.widget.BottomNavigationView>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desabafe aqui"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/idEditTextDesabafe"
        app:layout_constraintStart_toStartOf="@+id/textView2" />

    <Button
        android:id="@+id/idBtnSalvarSentimento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Salvar"
        android:textColor="@color/colorPrimaryVariant"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/idEditTextDesabafe"
        app:layout_constraintStart_toStartOf="@+id/idEditTextDesabafe"
        app:layout_constraintTop_toBottomOf="@+id/idEditTextDesabafe" />

    <TextView
        android:id="@+id/idTxtSentimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/idSpinnerSentindo"
        app:layout_constraintStart_toStartOf="@+id/idSpinnerSentindo"
        app:layout_constraintTop_toBottomOf="@+id/idBtnImgSentimento" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="CENTRO DE VALORIZAÇÃO DA VIDA - LIGUE 188"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/idBtnSalvarSentimento"
        app:layout_constraintStart_toStartOf="@+id/idBtnSalvarSentimento"
        app:layout_constraintTop_toBottomOf="@+id/idBtnSalvarSentimento" />

</android.support.constraint.ConstraintLayout>